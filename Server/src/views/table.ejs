<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head'); %>
    <title>Document</title>
</head>
<body>
    <%- include('./partials/header')  %> 
        <section class="mt-5 p-4">
        <table class="table w-50  m-auto">
            <thead>
                <tr class="table-light">
                    <th scope="col">#</th>
                    <th scope="col">concepto</th>
                    <th scope="col">Monto</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Acciones</th>
                    
                </tr>
                </thead>
                <tbody>
                    <% operations.forEach(ope=> { %>
                        <% if(user.id == ope.id_user ) { %> 
                    <tr>
                        <th class="align-middle"><%= ope.id  %>  </th>
                        <td class="align-middle"><%= ope.description  %> </td>
                        <td class="align-middle"><%= ope.amount %> </td>
                        <td class="align-middle"><%= ope.types.name %> </td>
                        <td class="align-middle"><%= ope.date  %> </td>
                        
                        <td>
                            
                            <form action="/operations/edit/<%=ope.id %>">
                            <button type="submit" class="  btn btn-outline-secondary w-100 mb-1 ">Editar</button>
                            </form>
                            <form action="/operations/del/<%=ope.id %>"   method="POST">
                            <button type="submit" class="btn btn-outline-danger w-100">&#10008;</button>
                            </form>
                            
                        </td>


                        
                    </tr>
                    <%  } %>  
                    <%  }) %>  
              
                </tbody>
        </table>

        </section>

        <div class="d-grid gap-2 col-2 mx-auto ">
            <button class="btn btn-outline-secondary btn-lg">Crear Operacion</button>
        </div>

        <%- include('./partials/footer')  %> 
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="/js/table.js"></script>
    </body>
    </html>